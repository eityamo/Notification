<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%="反抗期届" %></h1>
      <%= form_with model: @record, url: records_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :myname %>
          <%= f.text_field :myname, class: 'form-control' %>         
        </div>
        <div class="form-group">
          <%= f.label :old %>
          <%= f.number_field :old, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :fromdate %>
          <%= f.date_select :fromdate, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :todate %>
          <%= f.date_select :todate, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :yourname %>
          <%= f.text_field :yourname, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :getup %>
          <%= f.select :getup, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :cleanup %>
          <%= f.select :cleanup, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :note %>
          <%= f.select :note, class: 'form-control' %>
        </div>
          <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

<div class="p-6 max-w-sm mx-auto bg-white rounded-xl shadow-md flex items-center space-x-4">
  <div class="flex-shrink-0">
    <img class="h-12 w-12" src="https://mebee.info/wp-content/uploads/2019/08/mebee_logo.png" alt="ChitChat Logo">
  </div>
  <div>
    <div class="text-xl font-medium text-black">ChitChat</div>
    <p class="text-gray-500">You have a new message!</p>
  </div>
</div>