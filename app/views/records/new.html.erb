<% content_for(:title, '反抗期届作成フォーム') %>
<%= content_for(:description, "反抗期を宣言する届出(反抗期届)をPDFで作成してくれるアプリ") %>
<%= content_for(:image_url, full_url("/assets/images/top.png")) %>

<section class="min-h-96 flex justify-center items-center flex-1 shrink-0 bg-gray-100 overflow-hidden shadow-lg rounded-lg relative py-16 md:py-20 xl:py-48">
  <!-- image - start -->
  <img src="https://images.unsplash.com/photo-1618004652321-13a63e576b80?auto=format&q=75&fit=crop&w=1500" loading="lazy" alt="Photo by Fakurian Design" class="w-full h-full object-cover object-center absolute inset-0" />
  <!-- image - end -->

  <!-- overlay - start -->
  <div class="bg-indigo-500 mix-blend-multiply absolute inset-0"></div>
  <!-- overlay - end -->
  
  <!-- text start -->
  <div class="sm:max-w-xl flex flex-col items-center relative p-4">
    <h1 class="titile text-white text-4xl sm:text-5xl md:text-7xl font-bold text-center mb-8 md:mb-12">とどけ、反抗期</h1>
    <p class="text-indigo-200 text-lg sm:text-xl text-center mb-4 md:mb-8">反抗期届を提出して大人の階段を登ろう</p>
  </div>
  <!-- text end -->
</section>

<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      <%#= image_tag 'clipboard_brown1.png', class:"w-full h-full object-contain object-center absolute inset-0" %>
    <!-- text - start -->
    <div class="mb-10 md:mb-8">
      <h2 class="text-gray-800 text-2xl lg:text-5xl font-bold text-center mb-4 md:mb-10">反抗期届</h2>

      <p class="max-w-screen-md text-gray-500 md:text-lg mx-auto">※当サービスによるトラブルについて責任を負いません。<br>※シャレの通じない相手には送らないでください。<br>※入力した個人情報は当サービス以外に使用することはありません。</p>
    </div>
    <!-- text - end -->

    <!-- form - start -->
      <%= form_with  model: @record, url: records_path, local: true, class: "max-w-screen-md grid sm:grid-cols-2 gap-4 mx-auto" do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="sm:col-span-2">
        <%= f.label :myname %>
        <%= f.text_field :myname, placeholder: "20字以内", maxlength: "20", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
      </div>
      <div class="sm:col-span-2">
        <%= f.label :old %>
        <%= f.number_field :old, in: 1..100, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>

      <div date-rangepicker, class="sm:col-span-2 flex flex-col">
        <%= f.label "反抗期間" %>
        <div class="flex">
          <%= f.date_field :fromdate, class:"text-center bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-auto px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        <span class="mx-4 text-gray-500 my-auto">〜</span>
          <%= f.date_field :todate, class:"text-center bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full md:w-auto px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
      </div>
      
      <div class="sm:col-span-2">
        <%= f.label :yourname%>
        <%= f.text_field :yourname, placeholder: "20字以内", maxlength: "10", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
      </div>

      <div class="inline-block relative w-48">
        <%= f.label :getup %>
        <div class="relative">
          <%= f.select :getup, ['適宜相談', '要', '不要'],  { selected: '適宜相談' }, class:"text-center bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
      </div>

      <div class="inline-block relative w-48">
        <%= f.label :cleanup %>
        <div class="relative">
          <%= f.select :cleanup, ['適宜相談', '要', '不要'],  { selected: '適宜相談' }, class:"text-center bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
      </div>

      <div class="sm:col-span-2">
        <%= f.label :remark %>
        <%= f.text_area :remark, placeholder: "50字以内", maxlength: "50", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full duration-100 px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
      </div>
      <div class="sm:col-span-2 flex justify-between items-center">
        <%= f.submit "PDF生成", class: "inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
      </div>
      <% end %>
    </form>
    <!-- form - end -->
